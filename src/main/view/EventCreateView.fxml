<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.controller.EventCreateController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20;">
      
    <Label text="TẠO SỰ KIỆN MỚI" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TextField fx:id="eventId" promptText="Mã sự kiện"/>
    <TextField fx:id="eventName" promptText="Tên sự kiện"/>
    <TextField fx:id="eventDate" promptText="Ngày tổ chức (dd/MM/yyyy)"/>
    <TextField fx:id="eventLocation" promptText="Địa điểm"/>
    <TextArea fx:id="eventDescription" promptText="Mô tả sự kiện" prefRowCount="3"/>

    <Button text="Tạo sự kiện" onAction="#handleCreateEvent" style="-fx-background-color: #ff8800; -fx-text-fill: white;"/>
</VBox>
