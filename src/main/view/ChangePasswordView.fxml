<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      spacing="16" alignment="CENTER" style="-fx-padding: 28;"
      fx:controller="main.controller.ChangePasswordController">
    <Label text="ĐỔI MẬT KHẨU" style="-fx-font-size:18;-fx-font-weight:bold;"/>
    <PasswordField fx:id="currentPasswordField" promptText="Mật khẩu hiện tại" prefWidth="220"/>
    <PasswordField fx:id="newPasswordField" promptText="Mật khẩu mới" prefWidth="220"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Nhập lại mật khẩu mới" prefWidth="220"/>
    <Button text="Đổi mật khẩu" onAction="#handleChangePassword"/>
    <Label fx:id="statusLabel" text="" style="-fx-font-size:14"/>
    <Button text="Thoát" onAction="#handleClose"
        style="-fx-background-color:#c00; -fx-text-fill:white;" />

</VBox>
